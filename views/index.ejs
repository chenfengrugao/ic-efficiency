<!DOCTYPE html>
<html>
  <head>
    <%- include('head', {header: header}) %>

    <style>
    </style>

    <script>
    </script>
  </head>
  
  <body>
    <div class="bg_white container">
      <div class="header text-center">
	      <p>IC Efficiency</p>
      </div>

      <div class="text-right"><a href="login">Login</a></div>

      <% 
        // generate cards for main menu
        var cnt = 0; //index for dat[]
        var MAX_COL = 3; //max card every row
      %>
      <% while(cnt < dat.length){ %>
      <div class="container" style="margin-top:1em; margin-bottom:1em;">
        <div class="card-deck">
          <% for(var i=0; i<MAX_COL; i++){ %>
          <div class="card text-center">
            <div style="margin: 1.5em;">
              <a href="<%
                var url = dat[cnt].title;
                url = url.replace(/[\s_-]*/g,"");
                url = url.toLowerCase();
                %><%= url %>">
                <span style="color:black;"><%= dat[cnt].title %></span>              
              </a><br>
              <span style="font-size:0.8em; color:gray;"><%= dat[cnt].description %></span>
            </div>
          </div>
          <% cnt++; if(i<(MAX_COL - 1) && cnt==dat.length)break; } %>
        </div>
      </div>
      <% } %>

      <div class="footer text-center">
	      <p>IC Efficiency v<%= ver %></p>
      </div>
      
    </div>
  </body>
</html>

