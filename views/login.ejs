<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="issue"/>
    <meta name="description" content="issue tracking system for IC" />
    <title>Login - iTS</title>
    <link rel="stylesheet" href="/bootstrap/4.1.3/bootstrap.min.css">
    <script src="/bootstrap/4.1.3/jquery-3.3.1.min.js"></script>
    <script src="/bootstrap/4.1.3/popper.min.js"></script>
    <script src="/bootstrap/4.1.3/bootstrap.min.js"></script>
    <link rel="stylesheet" href="/css/common.css">
    <style>
      .float_menu {
	  background-color: #2d3743; 
	  color: white; 
	  padding: 0.5em;
	  z-index: 99;
	  position: fixed;
	  right: 0.5em;
	  bottom: 0.5em;
      }
      .float_menu a {
	  color: white;
      }
      .span_padding {
        padding: 0.5em 1em;
      }
    </style>
    
    <script>
      function load_data(){
        $.get('login', function(data){
          //var json_obj = JSON.parse(data);
          var ret = "";
          for(var i=0; i<data.length; i++){
            var row = data[i];
            ret += "<div><span class='span_padding'>" + row.id + "</span>";
            ret += "<span class='span_padding'>" + row.name + "</span>";
            //ret += "<span class='span_padding'>" + row.description + "</span>";
            ret += " <a href='newIssue' target='_target'>New Issue</a>";
            ret += "</div>";
          }
          $("#prj_data").html(ret);
        });
      }
      </script>
  </head>
  
  <body>
    <div class="bg_white container">
      <div class="header text-center">
	    <p>issue Tracking System</p>
      </div>

      <div class="" style="text-align:center">
        <form action="loginHandler" method="post">
        <div class="form-group">
            <input class="form-control" type="text" id="username" name="username" placeholder="User Name">
            <input class="form-control" type="password" id="passwd" name="passwd" placeholder="Password">
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
        </form>
      </div>

     
    </div>
  </body>
</html>

